{
  "benchmark": "hotpotqa",
  "runner": "llm",
  "data_dir": "data",
  "methods": ["FullHistory", "GoC", "SimpleRAG"],
  "prepare": false,
  "base": {
    "model": "gpt-4.1-mini",
    "dotenv": ".env",
    "max_steps": 24,
    "max_json_retries": 2,
    "task_limit": 40,

    "retriever_kind": "bm25",
    "faiss_dim": 384,

    "budget_unfold": 1200,
    "unfold_k": 10,
    "linear_summary_every": 8,

    "multi_turn_min_step": 8,
    "multi_turn_min_open_pages": 3,
    "min_steps_before_finish": 2,
    "min_open_pages_before_finish": 1,
    "require_docids_in_finish": true,

    "trace_messages": false,
    "log_traces": false,

    "bench_kwargs": {
      "path": "data/hotpotqa/hotpot_dev_distractor_v1.json",
      "variant": "late_support_titles",
      "supporting_position": "late",
      "filler_turns": 8,
      "doc_repeat": 3
    }
  },
  "grid": {
    "budget_active": [2000, 4000, 8000]
  }
}
